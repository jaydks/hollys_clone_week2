<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingloginedActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:clickable="true"
            android:id="@+id/btn_back"
            android:layout_width="@dimen/margin_17"
            android:layout_height="@dimen/margin_35"
            android:layout_marginStart="@dimen/margin_7"
            android:src="@drawable/img_back2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_65"
                android:background="@color/lightgray2"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:paddingStart="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_10"
                android:text="로그인 설정"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_marginStart="@dimen/margin_17"
                android:gravity="center_vertical"
                android:text="로그아웃"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_17"
                    android:gravity="center_vertical"
                    android:text="자동 로그인"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <ToggleButton
                    android:layout_width="@dimen/margin_65"
                    android:layout_height="@dimen/margin_45"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff="&#160;" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_65"
                android:background="@color/lightgray2"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:paddingStart="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_10"
                android:text="알림 설정"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_100">

                <TextView
                    android:id="@+id/txt_pushalarm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_17"
                    android:gravity="center_vertical"
                    android:text="푸시알림\n마케팅 프로모션 알림\n스마트 오더, 딜리버리 알림"
                    android:textColor="@color/black"
                    android:textSize="19sp" />


                <ToggleButton
                    android:layout_width="@dimen/margin_65"
                    android:layout_height="@dimen/margin_45"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff="&#160;" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_65"
                android:background="@color/lightgray2"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:paddingStart="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_10"
                android:text="앱 권한 설정"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_17"
                    android:gravity="center_vertical"
                    android:text="연락처"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <ToggleButton
                    android:layout_width="@dimen/margin_65"
                    android:layout_height="@dimen/margin_45"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff="&#160;" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_17"
                    android:gravity="center_vertical"
                    android:text="위치 정보"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <ToggleButton
                    android:layout_width="@dimen/margin_65"
                    android:layout_height="@dimen/margin_45"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff="&#160;" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_17"
                    android:gravity="center_vertical"
                    android:text="사진"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <ToggleButton
                    android:layout_width="@dimen/margin_65"
                    android:layout_height="@dimen/margin_45"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff="&#160;" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_65"
                android:background="@color/lightgray2"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:paddingStart="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_10"
                android:text="이용 약관"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_marginStart="@dimen/margin_17"
                android:drawableRight="@drawable/btn_setting_more"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/margin_20"
                android:text="개인정보처리방침"
                android:textColor="@color/black"
                android:textSize="19sp"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_marginStart="@dimen/margin_17"
                android:drawableRight="@drawable/btn_setting_more"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/margin_20"
                android:text="서비스 이용약관"
                android:textColor="@color/black"
                android:textSize="19sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_marginStart="@dimen/margin_17"
                android:drawableRight="@drawable/btn_setting_more"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/margin_20"
                android:text="멤버십 이용약관"
                android:textColor="@color/black"
                android:textSize="19sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_marginStart="@dimen/margin_17"
                android:drawableRight="@drawable/btn_setting_more"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/margin_20"
                android:text="할리스카드 이용약관"
                android:textColor="@color/black"
                android:textSize="19sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/lightgray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_65"
                android:background="@color/lightgray2"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:paddingStart="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_10"
                android:text="버전정보"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_17"
                    android:gravity="center_vertical"
                    android:text="현재 버전"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_17"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:gravity="center_vertical|end"
                    android:text="7.2"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_17"
                    android:gravity="center_vertical"
                    android:text="최신 버전"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginStart="@dimen/margin_17"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:gravity="center_vertical|end"
                    android:text="7.2"
                    android:textColor="@color/red"
                    android:textSize="19sp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/lightgray2"
                android:baselineAligned="false"
                android:gravity="bottom" />


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>